<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>科室</name>
  <tablename>tb_department</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>专科</name>
      <key>college_id</key>
      <type>fkey</type>
      <displayfield>name</displayfield>
      <notnull>1</notnull>
      <tablename>tb_college</tablename>
      <ntbname>r_college</ntbname>
      <condition>r_college.status='A'  </condition>
      <displayinlist>1</displayinlist>
      <search>1</search>
    </field>
    <field>
      <name>名称</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>排序</name>
      <key>seq</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
    </field>
    <field>
      <name>描述</name>
      <key>description</key>
      <type>longtext</type>
    </field>
    <field>
      <name>相关疾病科目</name>
      <key>subcategory_list</key>
      <type>flist</type>
      <displayfield>name</displayfield>
      <tablename>
        (select b.id,a.name+'-'+b.name name from tb_category a
        inner join tb_subcategory b on a.id=b.category_id
        where a.status&lt;&gt;'D' 
        and b.status&lt;&gt;'D')</tablename>
      <ntbname>r_subcategory</ntbname>
      <condition>1=1 </condition>
      <displayinlist>1</displayinlist>
      <notnull>1</notnull>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
          <default>1</default>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
    </option>
  </options>
</root>