<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>专家</name>
  <tablename>tb_doctor</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>姓名</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>头像</name>
      <key>photo</key>
      <type>upload</type>
      <filetype>image</filetype>
      <uploadmodule>doctor</uploadmodule>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
    </field>
    <field>
      <name>工作单位</name>
      <key>hospital_id</key>
      <type>fkey</type>
      <displayfield>name</displayfield>
      <notnull>1</notnull>
      <tablename>tb_hospital</tablename>
      <ntbname>r_hospital</ntbname>
      <condition>r_hospital.status='A'  </condition>
      <displayinlist>1</displayinlist>
      <search>1</search>
    </field>
    <field>
      <name>科室</name>
      <key>department_id</key>
      <type>fkey</type>
      <displayfield>name</displayfield>
      <notnull>1</notnull>
      <tablename>
        (select b.id,concat(a.name,'-',b.name) name from tb_college a
        inner join tb_department b on a.id=b.college_id
        where a.status='A' and b.status='A')</tablename>
      <ntbname>r_department</ntbname>
      <condition>1=1  </condition>
      <displayinlist>1</displayinlist>
      <search>1</search>
    </field>
    <field>
      <name>性别</name>
      <key>sextual</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>男</name>
          <value>M</value>
        </option>
        <option>
          <name>女</name>
          <value>F</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>职位</name>
      <key>position</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>特长</name>
      <key>expert</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>预约价格</name>
      <key>price</key>
      <type>number</type>
      <displayinlist>1</displayinlist>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>排序</name>
      <key>seq</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
    </field>
    <field>
      <name>点击数</name>
      <key>count</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <nosave>1</nosave>
    </field>
    <field>
      <name>介绍</name>
      <key>content</key>
      <type>html</type>
    </field>
    <field>
      <name>周一上午</name>
      <key>duty_mon_m</key>
