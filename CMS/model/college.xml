<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>专科</name>
  <tablename>tb_college</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>名称</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>排序</name>
      <key>seq</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
    </field>
    <field>
      <name>描述</name>
      <key>description</key>
      <type>longtext</type>
    </field>
    <field>
      <name>科室</name>
      <key>departmentlist</key>
      <type>grid</type>
      <api>BaseInfo/department.php?action=getgrid&amp;college_id=</api>
      <newitemurl>BaseInfo/department.php?action=add</newitemurl>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
          <default>1</default>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>