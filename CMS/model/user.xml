<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>用户</name>
  <tablename>tb_user</tablename>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>用户名</name>
      <key>login_id</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>密码</name>
      <key>password</key>
      <type>password</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>是否管理员</name>
      <key>is_admin</key>
      <type>check</type>
      <displayinlist>1</displayinlist>
      <yvalue>是</yvalue>
      <nvalue>否</nvalue>
    </field>
    <field>
      <name>用户姓名</name>
      <key>user_name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
    </field>
    <field>
      <name>邮箱地址</name>
      <key>email</key>
      <type>text</type>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>备注</name>
      <key>remarks</key>
      <type>longtext</type>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
  <javascripts>
    <javascript>
      <filename>user.js</filename>
      <detail>1</detail>
    </javascript>
    <javascript>
    </javascript>
  </javascripts>
