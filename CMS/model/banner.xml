<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>广告</name>
  <tablename>tb_banner</tablename>
  <nolist>0</nolist>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <fields>
    <field>
      <name>标识符</name>
      <key>index_key</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <search>1</search>
      <disableindetail>1</disableindetail>
    </field>
    <field>
      <name>名称</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>位置</name>
      <key>position</key>
      <type>longtext</type>
      <displayinlist>1</displayinlist>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>广告标题</name>
      <key>title</key>
      <type>longtext</type>
      <notnull>1</notnull>
    </field>
    <field>
      <name>广告内容</name>
      <key>cont</key>
      <type>html</type>
    </field>
    <field>
      <name>超链接</name>
      <key>link</key>
      <type>longtext</type>
    </field>
    <field>
      <name>背景图</name>
      <key>pic</key>
      <type>upload</type>
      <uploadmodule>banner</uploadmodule>
      <filetype>image</filetype>
      <displayinlist>1</displayinlist>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>